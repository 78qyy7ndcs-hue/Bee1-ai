<head>
  <meta charset="UTF-8">
  <title>AI-armband test v2</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: system-ui, sans-serif;
      margin: 0;
      padding: 16px;
      background: #0b0b0d;
      color: #f5f5f5;
    }
    h1 {
      font-size: 1.4rem;
      margin-bottom: 0.3rem;
    }
    h2 {
      font-size: 1.1rem;
      margin-top: 1.2rem;
      margin-bottom: 0.3rem;
    }
    button {
      padding: 10px 16px;
      margin: 4px 4px 12px 0;
      border-radius: 999px;
      border: none;
      font-size: 1rem;
      cursor: pointer;
    }
    #startBtn {
      background: #38bdf8;
      color: #000;
    }
    #stopBtn {
      background: #4b5563;
      color: #fff;
    }
    #status {
      margin-bottom: 10px;
      font-size: 0.95rem;
      opacity: 0.9;
    }
    #log, #reminders {
      background: #111827;
      border-radius: 8px;
      padding: 10px;
      max-height: 40vh;
      overflow-y: auto;
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      font-size: 0.85rem;
      border: 1px solid #374151;
    }
    .entry {
      border-bottom: 1px solid #374151;
      padding: 6px 0;
    }
    .entry:last-child {
      border-bottom: none;
    }
    .label {
      font-weight: 600;
      color: #a3e635;
    }
    .json {
      white-space: pre-wrap;
      color: #e5e7eb;
    }
    .error {
      color: #f97373;
    }
    .pill {
      display: inline-block;
      border-radius: 999px;
      padding: 2px 8px;
      font-size: 0.75rem;
      margin-right: 4px;
      background: #1f2937;
      color: #e5e7eb;
    }
